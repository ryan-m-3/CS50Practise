#include <cs50.h>
#include <stdio.h>

int main(void)
{
    //define start variable outside of for loop
    int start;
//for loop to ask for starting population size and make sure it is above 9
    for (start = get_int("Starting population size \n"); start < 9;)
    {
        start = get_int("Starting population size \n");
    }
    //define end variable outside of for loop
    int end;
    for (end = get_int("Ending population size \n"); end < start;)
    {
        end = get_int("Ending population size \n");
    }
//calculate births, deaths and years
    int born;
    int dead;
    int n = 0;
    while (start < end)
    {
        born = start / 3;
        dead = start / 4;
        start = start + born - dead;
        n++;
    }
    if (start >= end)
    {
        printf("Years: %i\n", n);
    }
}
